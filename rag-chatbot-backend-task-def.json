{
  "family": "rag-chatbot-backend-task-def",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::835156586196:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::835156586196:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "rag-chatbot-backend-container",
      "image": "835156586196.dkr.ecr.us-east-1.amazonaws.com/rag-chatbot-backend",
      "portMappings": [{"containerPort": 8000, "protocol": "tcp"}],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/rag-chatbot-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "cpu": 256,
      "memory": 512
    }
  ]
}
